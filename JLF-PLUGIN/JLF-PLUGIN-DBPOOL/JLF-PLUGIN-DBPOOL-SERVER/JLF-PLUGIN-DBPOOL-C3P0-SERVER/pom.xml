<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.jlf</groupId>
		<artifactId>JLF-PLUGIN-DBPOOL-SERVER</artifactId>
		<version>0.0.1</version>
	</parent>
	<artifactId>JLF-PLUGIN-DBPOOL-C3P0-SERVER</artifactId>
	<properties>
		<c3p0.version>0.9.5.2</c3p0.version>
	</properties>

	<dependencies>
		<!--依赖c3p0插件 -->
		<dependency>
			<groupId>com.mchange</groupId>
			<artifactId>c3p0</artifactId>
			<version>${c3p0.version}</version>
		</dependency>
		<!--依赖JLF-PLUGIN-CHECK-CLIENT -->
		<dependency>
			<groupId>${groupId}</groupId>
			<artifactId>JLF-PLUGIN-CHECK-CLIENT</artifactId>
			<version>${parent.version}</version>
		</dependency>
		<!--依赖JLF-PLUGIN-CHECK-PROVIDE -->
		<dependency>
			<groupId>${groupId}</groupId>
			<artifactId>JLF-PLUGIN-CHECK-PROVIDE</artifactId>
			<version>${parent.version}</version>
		</dependency>
		<!--依赖JLF-PLUGIN-JSON-PROVIDE -->
		<dependency>
			<groupId>${groupId}</groupId>
			<artifactId>JLF-PLUGIN-JSON-PROVIDE</artifactId>
			<version>${parent.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>